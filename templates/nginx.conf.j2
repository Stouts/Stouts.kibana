# Do NOT modify this file by hand!

server {
    listen            {{kibana_proxy_port}};
{% if kibana_proxy_hostname %}
    server_name       {{kibana_proxy_hostname}};
{% endif %}

{% if kibana_proxy_auth %}
        auth_basic "Restricted";
        auth_basic_user_file {{kibana_home}}/.htpasswd;
{% endif %}

    location /robots.txt {
        return 200 "User-agent: *\nDisallow: /";
    }

    location / {
        root {{kibana_home}}/www;
        expires max;
    }

    error_log         {{kibana_proxy_log}};

}
